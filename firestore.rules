rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isTeamMember() {
      return isAuthenticated() && getUserRole() in ['admin', 'team'];
    }
    
    function isAffiliate() {
      return isAuthenticated() && getUserRole() == 'affiliate';
    }
    
    function isOrgMember(orgId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId == orgId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Organizations collection
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow create: if isTeamMember();
      allow update: if isTeamMember() || isOrgMember(orgId);
      allow delete: if isAdmin();
      
      // Certifications subcollection
      match /certifications/{certId} {
        allow read: if isAuthenticated();
        allow write: if isTeamMember() || isOrgMember(orgId);
      }
      
      // Capabilities subcollection
      match /capabilities/{capId} {
        allow read: if isAuthenticated();
        allow write: if isTeamMember() || isOrgMember(orgId);
      }
    }

    // Opportunities collection
    match /opportunities/{oppId} {
      allow read: if isAuthenticated() && (
        isTeamMember() || 
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.assignedAffiliateIds
      );
      allow create: if isTeamMember();
      allow update: if isTeamMember() || 
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.assignedAffiliateIds;
      allow delete: if isAdmin();
    }

    // Projects collection
    match /projects/{projectId} {
      allow read: if isAuthenticated() && (
        isTeamMember() || 
        request.auth.uid in resource.data.teamIds
      );
      allow create: if isTeamMember();
      allow update: if isTeamMember() || request.auth.uid in resource.data.teamIds;
      allow delete: if isAdmin();
      
      // Milestones subcollection
      match /milestones/{milestoneId} {
        allow read: if isAuthenticated();
        allow write: if isTeamMember() || 
          request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.teamIds;
      }
    }

    // Meetings collection
    match /meetings/{meetingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isTeamMember() || request.auth.uid in resource.data.attendeeIds;
      allow delete: if isAdmin();
      
      // Action items subcollection
      match /actionItems/{actionId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }

    // Action Items collection (top-level)
    match /actionItems/{actionId} {
      allow read: if isAuthenticated() && (
        isTeamMember() || 
        resource.data.assigneeId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isTeamMember() || resource.data.assigneeId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Rocks collection
    match /rocks/{rockId} {
      allow read: if isAuthenticated();
      allow create: if isTeamMember();
      allow update: if isTeamMember() || resource.data.ownerId == request.auth.uid;
      allow delete: if isAdmin();
      
      // Rock milestones subcollection
      match /milestones/{milestoneId} {
        allow read: if isAuthenticated();
        allow write: if isTeamMember() || 
          get(/databases/$(database)/documents/rocks/$(rockId)).data.ownerId == request.auth.uid;
      }
    }

    // Documents collection
    match /documents/{docId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isTeamMember() || resource.data.uploadedById == request.auth.uid;
      allow delete: if isAdmin() || resource.data.uploadedById == request.auth.uid;
    }

    // Services collection
    match /services/{serviceId} {
      allow read: if true; // Public read for marketing
      allow write: if isAdmin();
    }

    // Activities collection
    match /activities/{activityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Notes collection
    match /notes/{noteId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if resource.data.authorId == request.auth.uid || isAdmin();
      allow delete: if resource.data.authorId == request.auth.uid || isAdmin();
    }

    // =========================================================================
    // Affiliate Networking System Collections
    // =========================================================================

    // Affiliate Biographies - affiliates can manage their own
    match /affiliateBiographies/{bioId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.affiliateId == request.auth.uid;
      allow update: if resource.data.affiliateId == request.auth.uid || isAdmin();
      allow delete: if isAdmin();
    }

    // GAINS Profiles - affiliates can manage their own
    match /gainsProfiles/{profileId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.affiliateId == request.auth.uid;
      allow update: if resource.data.affiliateId == request.auth.uid || isAdmin();
      allow delete: if isAdmin();
    }

    // Contact Spheres - affiliates can manage their own
    match /contactSpheres/{sphereId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.affiliateId == request.auth.uid;
      allow update: if resource.data.affiliateId == request.auth.uid || isAdmin();
      allow delete: if isAdmin();
    }

    // Previous Customers - affiliates can manage their own
    match /previousCustomers/{customersId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.affiliateId == request.auth.uid;
      allow update: if resource.data.affiliateId == request.auth.uid || isAdmin();
      allow delete: if isAdmin();
    }

    // One-to-One Meetings - participants can read/update
    match /oneToOneMeetings/{meetingId} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.initiatorId == request.auth.uid ||
        resource.data.partnerId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isAdmin() ||
        resource.data.initiatorId == request.auth.uid ||
        resource.data.partnerId == request.auth.uid
      );
      allow delete: if isAdmin();
    }

    // Referrals - referrer and recipient can access
    match /referrals/{referralId} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.referrerId == request.auth.uid ||
        resource.data.recipientId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isAdmin() ||
        resource.data.referrerId == request.auth.uid ||
        resource.data.recipientId == request.auth.uid
      );
      allow delete: if isAdmin();
    }

    // Affiliate Stats - affiliates can read their own, admins can read all
    match /affiliateStats/{statsId} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.affiliateId == request.auth.uid
      );
      allow create: if isAdmin();
      allow update: if isAdmin(); // Stats are updated by system/admin
      allow delete: if isAdmin();
    }

    // AI Match Suggestions - affiliates can read their own suggestions
    match /aiMatchSuggestions/{suggestionId} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.affiliateId == request.auth.uid
      );
      allow create: if isAdmin(); // Only system creates suggestions
      allow update: if isAuthenticated() && (
        isAdmin() ||
        resource.data.affiliateId == request.auth.uid // Can accept/decline
      );
      allow delete: if isAdmin();
    }

    // =========================================================================
    // Strategic Partners
    // =========================================================================

    // Strategic Partners - read by all authenticated, write by admins/team
    match /strategicPartners/{partnerId} {
      allow read: if isAuthenticated();
      allow create: if isTeamMember();
      allow update: if isTeamMember();
      allow delete: if isAdmin();
    }

    // Team Members - read by all authenticated, write by admins/team
    match /teamMembers/{memberId} {
      allow read: if isAuthenticated();
      allow create: if isTeamMember();
      allow update: if isTeamMember();
      allow delete: if isAdmin();
    }
  }
}
