# Environment Configuration
# Copy this file to .env.local and fill in your values

# Node Environment
NODE_ENV=development

# UserWay Accessibility Widget
# Get your account ID from https://userway.org/dashboard
NEXT_PUBLIC_USERWAY_ACCOUNT_ID=

# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Mattermost Integration
# Get webhook URL from Mattermost > Integrations > Incoming Webhooks
MATTERMOST_WEBHOOK_URL=

# ThomasNet Credentials (for authenticated supplier search)
# Create a free account at https://www.thomasnet.com/register
THOMASNET_EMAIL=
THOMASNET_PASSWORD=

# CONNEX Marketplace Credentials (MEP National Network supplier database)
# Create a free account at https://app.connexmarketplace.com/create-account
# 165,000+ U.S. manufacturers in the database
CONNEX_EMAIL=
CONNEX_PASSWORD=

# ============================================================================
# KDM CONSORTIUM PLATFORM INTEGRATIONS
# ============================================================================

# Stripe Payment Processing
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# Stripe Connect for revenue splitting
STRIPE_CONNECT_CLIENT_ID=
# Webhook signing secret from Stripe Dashboard > Developers > Webhooks
STRIPE_WEBHOOK_SECRET=

# Email Service (Choose one: SendGrid or Resend)
# SendGrid: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
SENDGRID_FROM_NAME=

# Resend (Alternative to SendGrid): https://resend.com/api-keys
RESEND_API_KEY=
RESEND_FROM_EMAIL=
RESEND_FROM_NAME=

# SMS Service (Optional - Twilio)
# Get credentials from https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Zoom Integration (for virtual events)
# Create OAuth app at https://marketplace.zoom.us/
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_WEBHOOK_SECRET=

# Platform Configuration
NEXT_PUBLIC_PLATFORM_NAME="KDM Consortium"
NEXT_PUBLIC_PLATFORM_URL=https://consortium.kdmassociates.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@kdmassociates.com

# Add additional environment variables below as needed
# NEXT_PUBLIC_* variables are exposed to the browser
# Variables without NEXT_PUBLIC_ prefix are server-side only